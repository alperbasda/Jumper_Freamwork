@using Jumper.Application.Features.EntityDefinitions.Commands.Create;
@model CreateEntityDefinitionCommand


<div class="card">
    <div class="card-header">
        <!--begin::Actions-->
        <div class="card-title">
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <a class="text-hover-primary" href="@Url.Action("Index","Home")">Anasayfa</a>
                </li>
                <!--end::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <a class="text-hover-primary" href="@Url.Action("Index","EntityDefinition")">Nesne Listesi</a>
                </li>
                <!--end::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <h6 class="text-muted">Nesne Oluştur</h6>
                </li>
                <!--end::Item-->
            </ul>

        </div>
        <!--end::Actions-->
        <div class="card-toolbar">
            <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-6 border-0">

                <li class="nav-item">
                    <a href="@Url.Action("Index","EntityDefinition")" class="btn btn-sm fw-bold btn-secondary nav-link">Nesne Listesi</a>
                </li>
            </ul>
        </div>

    </div>
    <div class="card-body">
        <form asp-controller="EntityDefinition" asp-action="Create" method="post">
            <div class="form-floating mb-7 row">
                <div class="col-6">
                    <label class="form-label" for="Name">İsim</label>
                    @Html.TextBoxFor(w=>w.Name,new {@class="form-control" ,@id="Name"})
                </div>
            </div>
            <div class=" pt-5 text-end">
                <button class=" btn btn-primary" type="submit">
                    Kaydet
                </button>
            </div>

        </form>
    </div>
</div>