<!--begin::Alert-->
<div class="alert alert-primary d-flex align-items-center p-5 mt-3">
    <!--begin::Icon-->
    <i class="ki-duotone ki-notification-bing fs-2hx me-4 mb-5 mb-sm-0"><span class="path1"></span><span class="path2"></span></i>
