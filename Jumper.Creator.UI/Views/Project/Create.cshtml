@using Jumper.Application.Features.ProjectDeclarations.Commands.Create;
@model CreateProjectDeclarationCommand


<div class="card">
    <div class="card-header">
        <!--begin::Actions-->
        <div class="card-title">
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <a class="text-hover-primary" href="@Url.Action("Index","Home")">Anasayfa</a>
                </li>
                <!--end::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <a class="text-hover-primary" href="@Url.Action("Index","Project")">Proje Listesi</a>
                </li>
                <!--end::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <h6 class="text-muted">Proje Oluştur</h6>
                </li>
                <!--end::Item-->
            </ul>

        </div>
        <!--end::Actions-->
        <div class="card-toolbar">
            <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-6 border-0">

                <li class="nav-item">
                    <a href="@Url.Action("Index","Project")" class="btn btn-sm fw-bold btn-secondary nav-link">Proje Listesi</a>
                </li>
            </ul>
        </div>

    </div>
    <div class="card-body">
        <form asp-controller="Project" asp-action="Create" method="post">
            <div class="form-floating mb-7 row">
                <div class="col-6">
                    <label class="form-label" for="Name">İsim</label>
                    @Html.TextBoxFor(w=>w.Name,new {@class="form-control" ,@id="Name"})
                </div>
                <div class="col-6">
                    <label class="form-label" for="Description">Açıklama</label>
                    @Html.TextAreaFor(w=>w.Description,new {@class="form-control",@id="Description"})
                </div>

            </div>
            <div class="form-floating mb-7 row">
                <div class="col-6">
                    <label class="form-label" for="CreateApi">Api Oluşturulsun Mu ?</label>
                    <select name="CreateApi" id="CreateApi" class="form-control">

                        <option value="@true">Evet</option>
                        <option value="@false">Hayır</option>

                    </select>

                </div>
                <div class="col-6">
                    <label class="form-label" for="CreateUI">UI Oluşturulsun Mu ?</label>
                    <select name="CreateUI" id="CreateUI" class="form-control">

                        <option value="@true">Evet</option>
                        <option value="@false">Hayır</option>

                    </select>

                </div>
            </div>

            <div class="form-floating mb-7 row">
                <div class="col-6">
                    <label class="form-label" for="UseDatabase">Veritabanı Var Mı ?</label>
                    <select name="UseDatabase" id="UseDatabase" class="form-control">

                        <option value="@true">Evet</option>
                        <option value="@false">Hayır</option>

                    </select>

                </div>
                <div class="col-6">
                    <label class="form-label" for="UseRabbitMq">RabbitMq Var Mı ?</label>
                    <select name="UseRabbitMq" id="UseRabbitMq" class="form-control">

                        <option value="@true">Evet</option>
                        <option value="@false">Hayır</option>

                    </select>

                </div>

            </div>

            <div class="form-floating mb-7 row">
                <div class="col-6">
                    <label class="form-label" for="UseSerilog">SeriLog Var Mı ?</label>
                    <select name="UseSerilog" id="UseSerilog" class="form-control">

                        <option value="@true">Evet</option>
                        <option value="@false">Hayır</option>

                    </select>

                </div>
                <div class="col-6">
                    <label class="form-label" for="UseCache">Cache Var Mı ?</label>
                    <select name="UseCache" id="UseCache" class="form-control">

                        <option value="@true">Evet</option>
                        <option value="@false">Hayır</option>

                    </select>

                </div>
            </div>

            <div class=" pt-5 text-end">
                <button class=" btn btn-primary" type="submit">
                    Kaydet
                </button>
            </div>

        </form>
    </div>
</div>
