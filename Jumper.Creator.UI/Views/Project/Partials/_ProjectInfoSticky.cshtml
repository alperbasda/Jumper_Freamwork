@using Core.CrossCuttingConcerns.Helpers.EnumHelpers;
@using Jumper.Application.Features.ProjectDeclarations.Queries.GetById;
@using Jumper.Creator.UI.Helpers;
@using Jumper.Creator.UI.Models.Enum;
@using Jumper.Domain.Enums;
@model GetByIdProjectDeclarationResponse

<!--begin::Sidebar-->
<div class="flex-column flex-lg-row-auto w-lg-250px w-xl-300px mb-10 order-1 order-lg-2">
    <div class="separator my-8"></div>
    <!--begin::Card-->
    <div id="right_side_sticky" class="card card-flush mb-0" data-kt-sticky="true" data-kt-sticky-name="subscription-summary" data-kt-sticky-offset="{default: false, lg: '200px'}" data-kt-sticky-width="{lg: '250px', xl: '300px'}" data-kt-sticky-left="auto" data-kt-sticky-top="150px" data-kt-sticky-animation="false" data-kt-sticky-zindex="95">
        <input type="hidden" id="ProjectId" value="@Model.Id" />
        <!--begin::Card body-->
        <div class="card-body fs-6">
            <!--begin::Section-->
            <div class="mb-7">
                <!--begin::Details-->
                <div class="d-flex align-items-center">
                    <!--begin::Avatar-->
                    <div class="symbol">
                        <span class="symbol symbol-60px me-3 p-6 bg-light-success">
                            <h3>@Model.Name.First()</h3>
                        </span>
                    </div>

                    <!--end::Avatar-->
                    <!--begin::Info-->
                    <div class="d-flex flex-column">
                        <!--begin::Name-->
                        <div data-partial="@Url.Action("Dropdown","Project")?Name=ProjectDeclarationDropdown&SelectedValue=@Model.Id">
                        </div>
                        <!--end::Name-->
                        @* 	<!--begin::Email-->
                        <a href="#" class="fw-semibold text-gray-600 text-hover-primary">sean@dellito.com</a>
                        <!--end::Email--> *@
                    </div>
                    <!--end::Info-->
                </div>
                <!--end::Details-->
            </div>
            <!--end::Section-->
            <!--begin::Seperator-->
            <div class="separator separator-dashed mb-7"></div>
            <!--end::Seperator-->
            <!--begin::Section-->
            <div class="mb-7">
                <!--begin::Title-->
                <h5 class="mb-4">Proje Detay</h5>
                <!--end::Title-->
                <!--begin::Details-->
                <div class="mb-0">
                    <!--begin::Plan-->
                    @* <span class="badge badge-light-info me-2">Basic Bundle</span> *@
                    <!--end::Plan-->
                    <!--begin::Price-->
                    <span class="fw-semibold text-gray-600">@Model.Description</span>
                    <!--end::Price-->
                </div>
                <!--end::Details-->
            </div>
            <!--end::Section-->
            <!--begin::Seperator-->
            <div class="separator separator-dashed mb-7"></div>
            <!--end::Seperator-->
            <!--begin::Section-->
            <div class="mb-10">
                <!--begin::Title-->
                <h5 class="mb-4">Proje Özeti</h5>
                <!--end::Title-->
                <!--begin::Details-->
                <table class="table fs-6 fw-semibold gs-0 gy-2 gx-2">
                    <!--begin::Row-->
                    <tr class="">
                        <td class="text-gray-400">Durum:</td>
                        <td>
                            <span class="badge badge-light-success">@Model.ProjectStatus.GetDescription()</span>
                        </td>
                    </tr>
                    <!--end::Row-->
                    <!--begin::Row-->
                    <tr class="">
                        <td class="text-gray-400">Başlangıç T. :</td>
                        <td class="text-gray-800">@Model.CreatedTime.ToShortDateString()</td>
                    </tr>
                    <!--end::Row-->
                    <!--begin::Row-->
                    <tr class="">
                        <td class="text-gray-400">Güncelleme T.:</td>
                        <td class="text-gray-800">@(Model.UpdatedTime?.ToShortDateString() ?? "-")</td>
                    </tr>
                    <!--end::Row-->

                </table>
                <!--end::Details-->
            </div>
            <!--end::Section-->
            <!--begin::Actions-->
            <div class="mb-0 d-flex justify-content-between">
                <a href="@Url.Action("UpdateInfo","Project")?id=@Model.Id" class="btn btn-sm fw-bold btn-light-primary">Proje Detay</a>
                <a class="btn btn-sm fw-bold btn-light-danger delete-link" href="@Url.Action("DeleteDirect","Project")?id=@Model.Id">
                    Projeyi Sil
                </a>
            </div>
            <!--end::Actions-->
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Card-->
</div>
<!--end::Sidebar-->


<script src="~/assets/js/pages/project-entity-events.js"></script>